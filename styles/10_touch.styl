.container
	padding-top 100px
	padding-bottom 80px
	.touch-wrapper
		position relative
		overflow hidden
		display flex
		justify-content center
		margin-bottom 50px
		.touch-block
			position relative		
			text-align center
			width 17%
			margin-right 80px
			&:last-child
				margin-right 0
			i.fa
				font-size 22px
				margin-bottom 10px
			i.fa-phone
				color white
				background-color black
				border-radius 5px
				width 14%
			
	.touch-form
		margin 0 auto
		max-width 477px
		position relative
		.touch-input
			width 100%
			height auto
			border 2px solid black
			margin-bottom 30px
			padding 23px
			font-size 16px
			font-family "SourceSansPro-Regular"
		
		.touch-textarea
			border 2px solid black
			padding 23px
			width 100%
			font-size 16px
			margin-bottom 30px
			font-family "SourceSansPro-Regular"
			
		
		.touch-confirm
			font-family "SourceSansPro-Regular"
			background-color black
			color #fff
			font-size 16px
			text-transform uppercase
			padding 15px 0
			width 170px
			height 50px
			margin 0 165px
			cursor pointer