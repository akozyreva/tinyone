.main-form
	background-color #fcdb00
	.container
		padding-top 250px
		padding-bottom 55px
		//позиционирование!!!
		display flex 
		flex-wrap wrap
		flex-direction column
		
		.main-form__title, .main-form__text
			//а это дочкам!
			flex-basis auto
			text-align center
			width 100%
		
		.main-form__btn
			flex-basis auto
			margin 0 auto
			margin-bottom 180px
			border 2px black solid
			font-family "SourceSansPro-Bold"
			font-size 22px
			background none
			text-transform uppercase
			padding 20px 70px
			cursor pointer
		a
			text-align center
			i.fa.fa-long-arrow-down
				cursor pointer
				width 100%
				font-size 32px
			
		.main-form__title
			font-family "SourceSansPro-Bold"
			font-size 48px
			margin-bottom 25px
			
		.main-form__text
			font-family "SourceSansPro-Regular"
			font-size 20px
			margin-bottom 50px			
